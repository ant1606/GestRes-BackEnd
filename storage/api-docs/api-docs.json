                                                },
                                                "bearer_expire": {
                                                    "type": "string",
                                                    "example": "Wed, 31 Jan 2024 23:16:03 GMT"
                                                },
                                                "user": {
                                                    "properties": {
                                                        "id": {
                                                            "type": "number",
                                                            "example": 1
                                                        },
                                                        "name": {
                                                            "type": "string",
                                                            "example": "Dummy User"
                                                        },
                                                        "email": {
                                                            "type": "string",
                                                            "example": "dummye@email.com"
                                                        },
                                                        "remember_token": {
                                                            "type": "string",
                                                            "example": null
