                                    "remember_me": {
                                        "type": "boolean"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "email": "mimail@example.com",
                                    "password": "abcxd232sx",
                                    "remember_me": false
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
